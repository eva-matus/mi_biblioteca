
<%= search_form_for @q do |f| %>
    <%= f.label :status_eq, "Status" %>
    <%= f.select :status_eq, options_for_select(@book.statuses, @q.status_eq), {} %>
    <%= f.submit %>
    <% end %>


<table>
    <thead>
        <th><%= sort_link(@q, :title)%></th>
        <th>Author</th>
        <th>Status</th>
        <th>Borrowed_at</th>
        <th>Returned_at</th>
      <th colspan = "3"></th>
    </thead>
    <tbody>
        <% @book.each do |b| %>
        <tr>
            <td><%= b.title %></td>
            <td><%= b.author %></td>
            <td><%= b.status %></td>
            <td><%= b.borrowed_at %></td>
            <td><%= b.returned_at %></td>
            <td><%= link_to 'Show', b %></td>
            <td><%= link_to 'Edit', edit_book_path(b) %></td>
            <td><%= link_to 'Destroy', b, method: :delete, data: {confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= link_to 'New Book', new_book_path %>
