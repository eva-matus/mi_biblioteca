<center>
    <form>
    <%= form_for(@book) do |f| %>

        <div>
            <%= f.label :title, 'Title' %>
            <% f.text_field :title %>
        </div>

        <div>
            <%= f.label :author, 'Author' %>
            <%= f.text_field :author %>
        </div>

        <div>
            <%= f.label :status, 'Status' %>
            <%= f.select :status, @statuses %>
        </div>

        <div>
            <%= f.label :borrowed_at %>
            <%= f.datetime_select :borrowed_at %>
        </div>

        <div>
            <%= f.label :returned_at %>
            <%= f.datetime_select :returned_at %>
        </div>

        <div>
            <%= f.submit %>
        </div>

    <% end %>

    </form>
</center>